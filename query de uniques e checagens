
--Alterações funcionario

ALTER TABLE TEL_FUNCIONARIO
ADD CONSTRAINT CK_TEL_FUN
CHECK (num_tel_fun < 11)

ALTER TABLE FUNCIONARIO
ADD CONSTRAINT UQ_RG_FUN
UNIQUE (rg_fun)

ALTER TABLE FUNCIONARIO
ADD CONSTRAINT CK_SEXO_FUNCIONARIO
CHECK (sexo_fun IN ('M', 'F'))

ALTER TABLE EMAIL_FUNCIONARIO
ADD CONSTRAINT UQ_END_EMAIL_FUN
UNIQUE (end_email)

ALTER TABLE TEL_FUNCIONARIO
ADD CONSTRAINT UQ_TEL_FUN
UNIQUE (num_tel_fun)


--Alterações Cliente
ALTER TABLE CLIENTE
ADD CONSTRAINT UQ_RG_CLI
UNIQUE (rg_cli)

ALTER TABLE TEL_CLIENTE
ADD CONSTRAINT UQ_TEL_CLI
UNIQUE (num_tel_cli)


ALTER TABLE CLIENTE
ADD CONSTRAINT CK_SEXO_CLIENTE
CHECK (sexo_cli IN ('M', 'F'))
