--Funções numéricas

--FUNÇÃO PARA CONTAR A QUANTIDADE DE ITENS NA VARIÁVEL
SELECT COUNT (cod_prod) FROM PRODUTO

--MESMA FUNÇÃO MAS COM MAIS ESPECIFICIDADE
SELECT COUNT (cod_prod) FROM PRODUTO
WHERE qtd_estoque_prod > 500

--FUNÇÃO DE SOMA PARA SOMAR OS VALORES DENTRO DA VARIÁVEL
SELECT SUM(qtd_estoque_prod) 

--FUNÇÃO PARA OBTER UMA MÉDIA DE VALORES DENTRO DA VARIÁVEL
SELECT AVG(preco_prod) FROM PRODUTO

--FUNÇÃO PARA OBTER O MAIOR VALOR NA VARIÁVEL
SELECT MAX(preco_prod) FROM PRODUTO

--FUNÇÃO PARA OBTER O MENOR VALOR NA VARIÁVEL
SELECT MIN(preco_prod) FROM PRODUTO

--FUNÇÃO DE SOMA COM MULTIPLICAÇÃO
SELECT SUM(preco_prod * qtd_estoque_prod) FROM PRODUTO



